---
import ServiceCard from './ui/ServiceCard.astro';
import imgRionegro from '../assets/images/loc-rionegro.webp';
import imgEnvigado from '../assets/images/Montview.jpeg';
import imgMedellin from '../assets/images/6CED1B6E-E6A6-42B3-982B-814ED01A55AC-_1_.webp';
---

<div class="bg-[#333638] py-8 md:py-16">
    <div class="max-w-7xl mx-auto px-4 md:px-16">
        <h2 class="text-3xl md:text-5xl text-center mb-12 font-alice font-bold leading-tight" style="font-family: 'Alice', serif;">
            <span class="text-[#4EAC9F]">Locaciones de ensueño</span>
            <br />
            <span class="text-white">Para tus eventos</span>
        </h2>

        <div class="relative w-full group">
            
            <button class="swiper-prev-locaciones-fixed absolute left-0 md:-left-20 top-[40%] -translate-y-1/2 z-50 w-10 h-10 bg-white rounded-full shadow-xl flex items-center justify-center hover:bg-gray-50 transition-all border border-gray-100 text-gray-800 cursor-pointer">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m15 18-6-6 6-6"/></svg>
            </button>
            
            <button class="swiper-next-locaciones-fixed absolute right-0 md:-right-20 top-[40%] -translate-y-1/2 z-50 w-10 h-10 bg-white rounded-full shadow-xl flex items-center justify-center hover:bg-gray-50 transition-all border border-gray-100 text-gray-800 cursor-pointer">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
            </button>

            <div class="swiper swiperLocacionesFixed !p-6">
                <div class="swiper-wrapper">
                    <ServiceCard 
                        borderColor="#333638"
                        largeArrow={true}
                        titleColor="#FFFFFF"
                        title="Rionegro" 
                        image={imgRionegro}
                        url="https://www.tusanagustin.com/lugares/rionegro"
                    />
                    <ServiceCard 
                        borderColor="#333638"
                        largeArrow={true}
                        titleColor="#FFFFFF"
                        title="Envigado" 
                        image={imgEnvigado}
                        url="https://www.tusanagustin.com/lugares/envigado"
                    />
                    <ServiceCard 
                        borderColor="#333638"
                        largeArrow={true}
                        titleColor="#FFFFFF"
                        title="Medellín" 
                        image={imgMedellin}
                        url="https://www.tusanagustin.com/lugares/medellin"
                    />
                    
                    {/* Duplicates for smooth bidirectional infinite loop */}
                    <ServiceCard 
                        borderColor="#333638"
                        largeArrow={true}
                        titleColor="#FFFFFF"
                        title="Rionegro" 
                        description=""
                        image={imgRionegro}
                        url="https://www.tusanagustin.com/lugares/rionegro"
                    />
                    <ServiceCard 
                        borderColor="#333638"
                        largeArrow={true}
                        titleColor="#FFFFFF"
                        title="Envigado" 
                        description=""
                        image={imgEnvigado}
                        url="https://www.tusanagustin.com/lugares/envigado"
                    />
                    <ServiceCard 
                        borderColor="#333638"
                        largeArrow={true}
                        titleColor="#FFFFFF"
                        title="Medellín" 
                        description=""
                        image={imgMedellin}
                        url="https://www.tusanagustin.com/lugares/medellin"
                    />
                    
                    {/* Third set of duplicates for robust looping */}
                    <ServiceCard 
                        borderColor="#333638"
                        largeArrow={true}
                        titleColor="#FFFFFF"
                        title="Rionegro" 
                        description=""
                        image={imgRionegro}
                        url="https://www.tusanagustin.com/lugares/rionegro"
                    />
                    <ServiceCard 
                        borderColor="#333638"
                        largeArrow={true}
                        titleColor="#FFFFFF"
                        title="Envigado" 
                        description=""
                        image={imgEnvigado}
                        url="https://www.tusanagustin.com/lugares/envigado"
                    />
                    <ServiceCard 
                        borderColor="#333638"
                        largeArrow={true}
                        titleColor="#FFFFFF"
                        title="Medellín" 
                        description=""
                        image={imgMedellin}
                        url="https://www.tusanagustin.com/lugares/medellin"
                    />
                </div>
            </div>
        </div>

        <div class="flex justify-center mt-8 mb-12">
            <a href="https://wa.me/573168753305?text=Hola!" class="bg-[#FDF5E9] text-[#333638] px-10 py-3 rounded-full hover:bg-opacity-90 transition-all font-medium font-poppins shadow-lg hover:scale-105 transform duration-300">
                Quiero Reservar
            </a>
        </div>
    </div>

   
   
</div>

<style>
    .swiper { width: 100%; height: auto; }
    .swiper-slide { 
        height: auto; 
        user-select: none;
        will-change: transform;
    }
    
    .swiper-prev-locaciones-fixed, .swiper-next-locaciones-fixed {
        display: flex !important;
        opacity: 1 !important;
        visibility: visible !important;
        width: 48px;
        height: 48px;
    }

    img { pointer-events: none; }
</style>

<script src="../scripts/slider-locaciones.js"></script>
